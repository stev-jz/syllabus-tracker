// Development schema using SQLite
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Course {
  id          String   @id @default(cuid())
  name        String?
  term        String?
  description String?
  materials   String?
  assessment  String?
  policies    String?
  examDates   String?
  pdfPath     String
  status      Status   @default(LOADING)
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  sections    Section[]
}

model Section {
  id           String   @id @default(cuid())
  sectionCode  String
  instructor   String
  lectures     Lecture[]
  course       Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId     String
}

model Lecture {
  id        String @id @default(cuid())
  dayOfWeek String
  startTime String
  endTime   String
  location  String
  section   Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId String
}

enum Status {
  LOADING
  SUCCESS
  FAILED
}

